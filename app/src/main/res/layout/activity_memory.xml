<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context=".MemoryActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="@string/dummy_content" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button android:id="@+id/dummy_button" style="?metaButtonBarButtonStyle"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="@string/dummy_button" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:weightSum="1">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="309dp"
                android:layout_gravity="top"
                android:layout_weight="0.43"
                android:minHeight="50dp"
                android:nestedScrollingEnabled="false"
                android:columnCount="5"
                android:rowCount="4">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:clickable="false"
                    android:onClick="buttonOnClick"
                    android:layout_row="0"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton2"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick"
                    android:layout_row="0"
                    android:layout_column="1" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton3"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick"
                    android:layout_row="0"
                    android:layout_column="2" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton4"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick"
                    android:layout_row="0"
                    android:layout_column="3" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton5"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton6"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton7"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton8"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton9"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton10"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton11"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton12"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton13"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton14"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton15"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton16"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton17"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton18"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton19"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton20"
                    android:layout_row="3"
                    android:layout_column="4"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="buttonOnClick" />

            </GridLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardViewer2"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:clickable="false" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardViewer1"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:clickable="false" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
